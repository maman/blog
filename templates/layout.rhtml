<head>
  <meta charset="utf-8">
  <title>
    <% if @path == 'index' %>
      <%= title %>
    <% elsif @path.split('/').compact.length == 4 %>
      <%= title %> - Achmad Mahardi: blog
    <% else %>
      <%= @path.capitalize.gsub(/[-]/, ' ') %> - Achmad Mahardi: blog
    <% end %>
  </title>
  <meta name="description" content="<%= @context[:description] || 'Blog of Achmad Mahardi' %>" />
  <meta name="author" content="<%= @config[:author] %>">
  <meta name="viewport" content="width=device-width">
  <link rel="icon" href="/favicon.ico">
  <link rel="alternate" type="application/atom+xml" title="<%= title %> - feed" href="/index.xml" />
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/extra.css">
  <link rel="stylesheet" href="/css/font-awesome.css">
  <script src="/js/libs/prefixfree.min.js"></script>
</head>
<body>
  <header id="sidebar" class="clearfix">
    <!--<aside id="logo" class="clearfix">
      <div class="clearfix">
        <a href="/">Achmad Mahardi Kusuma Rachman</a>
      </div>
    </aside>-->
    <ul id="meta">
      <li class="blogname"><h1 id="blogname"><a href="/" title="Welcome">Achmad Mahardi</a></h1></li>
      <li class="tagline"><h2 id="tagline">CTO of Nanomit.es</h2></li>
      <li class="website link"><a href="/about" title="about">about</a></li>
      <li class="twitter link"><a href="http://twitter.com/achmadmahardi" title="twitter" target="_blank">@achmadmahardi</a></li>
      <li class="email link"><a href="mailto:maman.lalilu@gmail.com&subject=Hello!" title="email" target="_blank">mail me</a></li>
    </ul>
    <!--<nav>
      <ul>
        <li><a href="/about" title="About">Colophon</a></li>
      </ul>
    </nav>-->
  </header>
  <section id="main">
    <%= yield %>
  </section>
